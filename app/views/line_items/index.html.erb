<h1>Listing line_items</h1>

<table>
  <tr>
    <th>Entry date</th>
    <th>No guests</th>
    <th>Type</th>
    <th>Amount</th>
    <th>Amount</th>
    <th>Note</th>
    <th>Action</th>
    <th>Description</th>
    <th>Expiry date</th>
    <th>References</th>
    <th>Invoice</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.entry_date %></td>
    <td><%= line_item.no_guests %></td>
    <td><%= line_item.type %></td>
    <td><%= line_item.amount %></td>
    <td><%= line_item.amount %></td>
    <td><%= line_item.note %></td>
    <td><%= line_item.action %></td>
    <td><%= line_item.description %></td>
    <td><%= line_item.expiry_date %></td>
    <td><%= line_item.references %></td>
    <td><%= line_item.invoice %></td>
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

