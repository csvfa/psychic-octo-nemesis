<h1>Change the number of guests</h1>
<p>Booking:<br /><%= @booking.name %></p>

<%= render 'form' %>

<h2>Previous updates to guest numbers</h2>
<table>
  <tr>
    <th>Number</th>
    <th>Updated at</th>
  </tr>

<% @booking.guests.each do |guest| %>
  <tr>
    <td><%= guest.number %></td>
    <td><%= guest.created_at %></td>
  </tr>
<% end %>
</table>