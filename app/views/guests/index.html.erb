<h1>Listing guests</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Changed at</th>
    <th>Booking</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%= guest.number %></td>
    <td><%= guest.changed_at %></td>
    <td><%= guest.booking %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

