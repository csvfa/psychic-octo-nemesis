<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code %><br />
    <%= f.select :code, Event::CODES %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  
  <div class="field">
    <%= f.label :occurred_at %><br />
    <%= f.datetime_select :occurred_at, :order => [:hour, :minute, :day, :month, :year] %>
  </div>

  <%= f.hidden_field :booking_id, :value => @booking.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
