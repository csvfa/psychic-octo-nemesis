<div class="container">
<h1>Listing instructors</h1>

<table class="table table-condensed">
  <tr>
    <th>First Name</th>
    <th>Surname</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Day rate</th>
    <th>City</th>
    <th></th>
  </tr>

<% @coaches.each do |coach| %>
  <tr>
    <td><%= coach.first_name %></td>
    <td><%= coach.surname %></td>    
    <td><%= coach.phone %></td>
    <td><%= coach.email %></td>
    <td><%= coach.day_rate %></td>
    <td><%= coach.cities.collect { |c| c.name }.to_sentence %></td>
    <td><%= link_to 'Edit', edit_coach_path(coach) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Instructor', new_coach_path %> | <%= link_to 'Home', root_path %>
</div>